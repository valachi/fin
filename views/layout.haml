!!!
%html
  %head
    %title Аренда коттеджей в финляндии
    %link{rel: 'stylesheet', href: '/stylesheets/styles.css'}
    %link{rel: 'stylesheet', href: '/stylesheets/prettyPhoto.css'}

    %meta{name: 'description', content: @description || 'Аренда манипуляторов в Петербурге' }

    %meta{name: 'yandex-verification', content: '4f49972a43cf1b97' }
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
  %body
    #container
      .holder
        #header
          / #teaser
          /   %p
          /     Аренда коттеджей в Финляндии
        #menu
          %ul
            %li
              %a{href: '#'} Главная
            %li
              %a{href: '#'} Размещение
            %li
              %a{href: '#'} Услуги
            %li
              %a{href: '#'} Как нас найти
            %li
              %a{href: '#'} Бронирование
            %li
              %a{href: '#'} Фотогалерея

        #left_column

          %p.form_header Форма заказа
          = haml :'shared/_form'

        #right_column
          = yield

        #clear
        #footer
          #gears
          #footer_links
          #footer_tel
            %p
              %a{href: '/contacts'} Контактная информация
          #counter
            = erb :'shared/_li_metrika'
            %br


%script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js", type: 'text/javascript'}
%script{type: 'text/javascript', src: '/javascripts/jquery.prettyPhoto.js'}

:javascript
  $(document).ready(function(){
    $("a[rel^='prettyPhoto']").prettyPhoto();
  });
